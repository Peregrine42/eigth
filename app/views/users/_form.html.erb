<%= form_for resource do |f| %>
  <ul style="list-style-type: none; margin-top: 5px; padding: 0; width: 250px">
    <li><label for="username"> Username * </label></li>
    <li>
      <ul style="list-style-type: none; margin: 0; padding: 10px;">
        <li><%= f.text_field :username, class: "#{ "error" if resource.errors[:username].present? }" %></li>
      </ul>
    </li>
    <li><em>numbers, lowercase letters and undescores only</em></li>
  </ul>

  <ul style="list-style-type: none; margin-top: 5px; padding: 0;">
    <li> <label for="role"> Role * </label> </li>
    <ul style="list-style-type: none; margin: 0; padding: 10px;">
      <li>
        <%= f.select(:role, @resource.class.roles.keys.map { |r| [r, r] }, {}, { class: "#{ "error" if resource.errors[:role].present? }" }) %>
      </li>
    </ul>
  </ul>

  <ul style="list-style-type: none; margin-top: 5px; padding: 0;">
    <li><label for="password"> Password * </label></li>
    <ul style="list-style-type: none; margin: 0; padding: 10px;">
      <li>
        <%= f.password_field :password, class: "#{ "error" if resource.errors[:password].present? }" %>
      </li>
    </ul>
  </ul>

  <ul style="list-style-type: none; margin-top: 5px; padding: 0;">
    <li><label for="password_confirmation"> Confirm Password *</label></li>
    <ul style="list-style-type: none; margin: 0; padding: 10px;">
      <li>
        <%= f.password_field :password_confirmation, class: "#{ "error" if resource.errors[:password_confirmation].present? }" %>
      </li>
    </ul>
  </ul>

  <hr>
  <%= f.submit %>
<% end %>
